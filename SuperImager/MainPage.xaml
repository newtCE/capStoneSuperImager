<Page
    x:Class="SuperImager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SuperImager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="Auto">
            <TextBlock>SUPER IMAGE COMPOSITOR FOR AUTOMATION AND BATCH REDNERINGS</TextBlock>
            <!--<Rectangle Fill="Coral" Height="64"></Rectangle>
            <Rectangle Fill="Coral" Height="64"></Rectangle>-->
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="ADD INPUT DIRECTORY" Width="256" Height="128" Margin="8" Click="Button_Click"/>
            <Button Content="REMOVE INPUT DIRECTORY" Width="256" Height="128" Margin="8"/>
            <Button Content="SET OUTPUT DIRECTORY" Width="256" Height="128" Margin="8" Click="Button_Click"/>
            <Button x:Name="CreateComposite" Content="CREATE COMPOSITE STRIP" Width="256" Height="128" Margin="8"/>
            <ToggleSwitch RequestedTheme="Dark">
                <ToggleSwitch.OffContent>Notify Via Slack OFF</ToggleSwitch.OffContent>
                <ToggleSwitch.OnContent>Notify Via Slack ON</ToggleSwitch.OnContent>
            </ToggleSwitch>
        </StackPanel>
    </StackPanel>
</Page>
